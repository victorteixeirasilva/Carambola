package br.dio.exerciciosobrecarga;

public class Area {
	private int base = 0;
	private int base2 = 0;
	private int altura = 0;
	
	public Area() {
		this.base = 0;
		this.altura = 0;
	}


	public int getBase2() {
		return base2;
	}
	public void setBase2(int base2) {
		this.base2 = base2;
	}
	public int getBase() {
		return base;
	}
	public void setBase(int base) {
		this.base = base;
	}
	public int getAltura() {
		return altura;
	}
	public void setAltura(int altura) {
		this.altura = altura;
	}
	
	public void quadrado (int base, int altura) {
		this.base = base;
		this.altura = altura;
		int resultado = base*altura;
		System.out.println("A area desse quadrado é: "+resultado);
	}
	public void retangulo (int base, int altura) {
		this.base = base;
		this.altura = altura;
		int resultado = base*altura;
		System.out.println("A area desse retangulo é: "+resultado);
	}
	public void trapezio (int base1,int base2, int altura) {
		this.base = base1;
		this.base2 = base2;
		this.altura = altura;
		int resultado = ((base+base2)*altura)/2;
		System.out.println("A area desse retangulo é: "+resultado);
	}
}
